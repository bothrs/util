{
  "name": "@bothrs/util",
  "version": "2.0.3",
  "description": "Common helper functions",
  "license": "MIT",
  "scripts": {
    "build": "yarn lint",
    "dev": "yarn lint",
    "fix": "prettier --write -l *.js *.mjs *.ts",
    "lint": "prettier -l *.js *.mjs *.ts",
    "tsc": "tsc -w --noEmit",
    "prepare": "yarn fix",
    "prepublishOnly": "npm run build",
    "preversion": "yarn fix",
    "postversion": "echo $npm_package_version && sleep 3 && git push --tags && yarn publish . --tag $npm_package_version && git push && echo \"Successfully released version $npm_package_version!\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "14",
    "@types/node-fetch": "2",
    "node-fetch": "^2.6.1",
    "prettier": "2",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "4"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "*.js",
    "*.mjs",
    "*.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bothrs/util.git"
  },
  "contributors": [
    "Thomas Ghysels <info@thomasg.be> (https://thomasg.be)"
  ],
  "bugs": {
    "url": "https://github.com/bothrs/util/issues"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "homepage": "https://github.com/bothrs/util#readme"
}
