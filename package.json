{
  "name": "@bothrs/util",
  "version": "2.0.4",
  "description": "Common helper functions",
  "license": "MIT",
  "scripts": {
    "dev": "yarn clean && tsc -w --noEmit",
    "fix": "yarn clean && prettier --write -l src",
    "lint": "yarn clean && prettier -l src",
    "clean": "find . -maxdepth 1 -type f \\( -name \\*.mjs -or -name \\*.js -or -name \\*.d.ts -or -name \\*.jsx \\) -delete; date",
    "build": "yarn clean && tsc -d && cp src/*.mjs .",
    "prepare": "yarn fix",
    "prepublishOnly": "npm run build",
    "preversion": "yarn fix",
    "postversion": "echo $npm_package_version && sleep 3 && npm publish --registry https://registry.npmjs.org && git push --tags && echo \"Successfully released version $npm_package_version!\""
  },
  "dependencies": {},
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "14",
    "@types/node-fetch": "2",
    "node-fetch": "^2.6.1",
    "prettier": "2",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "4"
  },
  "peerDependencies": {
    "node-fetch": "^2.6.1"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "*.js",
    "*.mjs",
    "*.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bothrs/util.git"
  },
  "contributors": [
    "Thomas Ghysels <info@thomasg.be> (https://thomasg.be)"
  ],
  "bugs": {
    "url": "https://github.com/bothrs/util/issues"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "homepage": "https://github.com/bothrs/util#readme"
}
